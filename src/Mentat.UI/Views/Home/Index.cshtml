@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="offset-2 col-sm-4">
            <div class="card bg-black box-shadow">
              <div class="card-body text-center flex-column d-flex">
                <img class="mx-auto" src="images/cil_apple.png"/>
                <h2 class="card-title text-center text-on-dark font-weight-bold">Mentor</h2>
                <p class="card-text text-left text-on-dark px-5">Take the legwork outta teaching! Generate auto-grading scripts to quickly and accurately grade assignments.</p>
                <button type="button" class="btn btn-gold btn-lg rounded-pill align-self-center mt-auto mb-3" style="width: 230px">GRADE</button>
              </div>
            </div>
        </div>
        <div class="col-sm-4">
             <div class="card bg-primary box-shadow">
              <div class="card-body text-center flex-column d-flex">
                <img class="mx-auto" src="images/ph_student-fill.png"/>
                <h2 class="card-title text-center text-white font-weight-bold">Student</h2>
                <p class="card-text text-left text-white px-5">Study your way (<em>to the top</em>)! Create and memorize interactive flash cards.</p>
                <button type="button" class="btn btn-white btn-lg rounded-pill align-self-center mt-auto mb-3" style="width: 230px">STUDY</button>
              </div>
            </div>
        </div>
    </div>
</div>